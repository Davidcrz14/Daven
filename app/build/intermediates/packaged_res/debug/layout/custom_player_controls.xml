<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Top Controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/controls_background_top"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/exo_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back" />

        <!-- Video Title -->
        <TextView
            android:id="@+id/exo_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Settings Button -->
        <ImageButton
            android:id="@+id/exo_settings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_settings"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Settings" />

    </LinearLayout>

    <!-- Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Center Controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp">

        <!-- Rewind 10s -->
        <ImageButton
            android:id="@id/exo_rew"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_replay_10"
            android:background="@drawable/control_button_background"
            android:contentDescription="Rewind 10 seconds" />

        <!-- Play/Pause -->
        <ImageButton
            android:id="@id/exo_play_pause"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="24dp"
            android:background="@drawable/play_pause_background"
            android:contentDescription="Play/Pause" />

        <!-- Forward 10s -->
        <ImageButton
            android:id="@id/exo_ffwd"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_forward_10"
            android:background="@drawable/control_button_background"
            android:contentDescription="Fast forward 10 seconds" />

    </LinearLayout>

    <!-- Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Bottom Controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/controls_background"
        android:padding="16dp">

        <!-- Progress Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <!-- Current Time -->
            <TextView
                android:id="@id/exo_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:minWidth="50dp"
                android:gravity="center" />

            <!-- Time Bar -->
            <androidx.media3.ui.DefaultTimeBar
                android:id="@id/exo_progress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="8dp" />

            <!-- Duration -->
            <TextView
                android:id="@id/exo_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:minWidth="50dp"
                android:gravity="center" />

        </LinearLayout>

        <!-- Additional Controls -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Lock Button -->
            <ImageButton
                android:id="@+id/exo_lock"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_lock_open"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Lock controls" />

            <!-- Spacer -->
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Speed Control -->
            <TextView
                android:id="@+id/exo_playback_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.0x"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless" />

            <!-- Subtitle Button -->
            <ImageButton
                android:id="@+id/exo_subtitle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_subtitles"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Subtitles"
                android:layout_marginStart="8dp" />

            <!-- Fullscreen Button -->
            <ImageButton
                android:id="@+id/exo_fullscreen"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_fullscreen"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Fullscreen"
                android:layout_marginStart="8dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
